void callback(char* topic, byte* payload, unsigned int length) {
  Serial.print("Message arrived [");
  Serial.print(topic);
  Serial.print("] ");
  for (int i = 0; i < length; i++) {
    Serial.print((char)payload[i]);
  }
  Serial.println();

  //Turn feature off to save power later
  if ((char)payload[0] == '1') {
    
    digitalWrite(2, LOW);   // Turn the LED on for testing.

  } else {
    digitalWrite(2, HIGH);  // Turn the LED off by making the voltage HIGH.
  }
}

WiFiClientSecure wificlient;
PubSubClient client(mqtt_server, mqtt_port, callback, wificlient);



void setup() {
  //Initialize serial and wait for port to open:
  Serial.begin(115200);
  delay(100);

  Serial.print("Attempting to connect to SSID: ");
  Serial.println(ssid);
  WiFi.begin(ssid, password);

  // attempt to connect to Wifi network:
  while (WiFi.status() != WL_CONNECTED) {
    Serial.print(".");
    // wait 1 second for re-trying

    delay(1000);
  }

  Serial.print("Connected to ");
  Serial.println(ssid);

  wificlient.setCACert(root_ca);

  client.setServer(mqtt_server, mqtt_port);
  client.setCallback(callback);

//For ports 8883 and 8884
  Serial.println("\nStarting connection to server...");
  if (!wificlient.connect(mqtt_server, mqtt_port)) {
    Serial.println("Connection failed!");
  }
  else {
    Serial.println("Connected to server!");
    wificlient.println();

      while(wificlient.connect(mqtt_server, mqtt_port)) {
        
        Serial.println("I am connected");

        client.publish(topic, "hello world");
        delay(100);
        client.subscribe(topic);

        delay(1000);
        Serial.println("end of loop  ");
        }

    wificlient.stop();
  }
  
  Serial.println("End of program");

 

}

